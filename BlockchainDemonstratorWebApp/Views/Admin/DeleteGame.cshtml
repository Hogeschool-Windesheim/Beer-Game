@using BlockchainDemonstratorApi.Models.Classes
@model Game

@{
    ViewData["Title"] = "DeleteGame";
    string players = "";
    for (int i = 0; i < Model.Players.Count; i++)
    {
        players += Model.Players[i].Name;
        if (i != Model.Players.Count - 1) players += ", ";
    }
}

<div class="middle-form box">
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl style="margin-right:-330px" class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Players)
        </dt>
        <dd class="col-sm-10">
            @players
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameStarted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameStarted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameMasterId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameMasterId)
        </dd>
    </dl>

    <form asp-action="ConfirmDeleteGame" asp-controller="Admin" asp-route-gameId="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <button style="margin-left:10px" class="btn btn-primary" action="/Admin">Back to List</button>
    </form>
</div>
