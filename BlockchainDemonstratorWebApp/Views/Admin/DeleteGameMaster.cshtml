@using BlockchainDemonstratorApi.Models.Classes
@model GameMaster

@{
    ViewData["Title"] = "DeleteGameMaster";
}

<div class="middle-form box">
    <h3>Are you sure you want to delete this?</h3> 
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Amount of games
        </dt>
        <dd class="col-sm-10">
            @Model.Games.Count
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Games.Any(g => g.Players.Count == 4 && g.CurrentDay != Factors.RoundIncrement * 8 + 1) ? "Active" : "Inactive")
        </dd>
    </dl>
    
    <form asp-action="ConfirmDeleteGameMaster" asp-controller="Admin" asp-route-gameMasterId="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <button style="margin-left:10px" class="btn btn-primary" action="/admin/gamemaster">Cancel</button>
    </form>
</div>
